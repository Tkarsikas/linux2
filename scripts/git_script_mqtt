cd ~
cd linux2
git pull origin main
echo "git pull done"
cp /home/ubuntu/linux2/scripts/git_script_mqtt /home/ubuntu/scripts/
cp /home/ubuntu/linux2/mqtt-chat/docker-compose.yml /home/ubuntu/mqtt-chat/
sudo cp /home/ubuntu/linux2/mqtt-chat/mosquitto/config/mosquitto.conf /home/ubuntu/mqtt-chat/mosquitto/config
sudo cp /home/ubuntu/linux2/templates/index.html /var/www/html/chat/
sudo cp /home/ubuntu/linux2/lemp-app /etc/nginx/sites-available
cp /home/ubuntu/linux2/mqtt-chat/mqtt_logger.py /home/ubuntu/mqtt-chat/
sudo cp /home/ubuntu/linux2/mqtt-chat/mqtt-logger.service /etc/systemd/system
sudo cp /home/ubuntu/linux2/mqtt-chat/api.service /etc/systemd/system
cp /home/ubuntu/linux2/mqtt-chat/api.py /home/ubuntu/mqtt-chat/
cp /home/ubuntu/linux2/mqtt-chat/mqtt-chat.py /home/ubuntu/mqtt-chat/
echo "mqtt-chat copied"
sudo systemctl daemon-reload
sudo systemctl restart nginx
sudo systemctl restart mqtt-logger
sudo systemctl restart api
echo "mqtt-chat services restarted"


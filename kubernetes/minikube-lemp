server {
    listen 80;
    server_name 192.168.49.2; # Tai palvelimen julkinen IP/domain

    # LEMP-stack Kubernetesissa
    location /kube/ {
        # Korvaa tämä oikealla Minikube IP:llä ja portilla
        proxy_pass http://192.168.49.2:30127/kube/;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket tuki (jos tarvitaan)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_request_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeout-asetukset
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Muut sivut tähän...
    location / {
        root /var/www/html;
        index index.html;
    }
}